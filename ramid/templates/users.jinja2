{% extends "base.jinja2" %}
{% block title %}Users list{% endblock %}
{% block content %}
    <h1>list of users</h1>
    <hr>

    {% if request.params['username'] %}
        <div class="alert alert-success">
            <strong>{{ request.params['username'] }}</strong> created successfully.
        </div>
    {% endif %}

    {% if users %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>username</th>
                <th>email</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <button rel="tooltip" onclick="deleteuser(this)" data-id="{{ user.id }}"
                                class="btn btn-danger btn-simple btn-xs" data-original-title="Delete">delete
                        </button>
                        <button rel="tooltip" onclick="updateuser(this)" data-id="{{ user.id }}"
                                class="btn btn-warning btn-simple btn-xs" data-original-title="Delete">update
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <span>Currently there are no users</span>
    {% endif %}
    <hr>
    <a href="{{ request.route_url('adduser') }}">
        <button type="button" class="btn btn-success">Add user</button>
    </a>

{% endblock %}

